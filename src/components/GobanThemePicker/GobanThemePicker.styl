.GobanThemePicker {
    display: inline-flex;
    flex-direction: column;
    flex-wrap: wrap;
    max-width: 100%;
    justify-content: center;

    .theme-set {
        display: inline-flex;
        flex-direction: row;
        flex-wrap: wrap;
        justify-content: center;

        .selector {
            margin: 1px;
            cursor: pointer;
            border: 1px solid transparent;
            opacity: 0.5;
        }

        .selector:hover, .selector.active {
            themed border-color primary
            opacity: 1.0;
        }

        input[type=color] {
            border: 0;
        }

        .color-reset {
            vertical-align: top;
            margin-top: 0.4rem;
        }
    }
}
