.GameList {
    max-width: 100vw;
    overflow-x: auto;
    text-align: center;

    .GobanLineSummaryContainerHeader {
        user-select: none;
        > div {
            white-space: nowrap;
        }
    }

    .sortable {
        cursor: pointer;
    }
    .sortable:after {
        display: inline-block;
        width: 0.8rem;
        font-size: 0.7rem;
        margin-left: 0.2rem;
        margin-bottom: 0.2rem;
        font-family: 'FontAwesome';
        content: " ";
    }

    .sortable.sorted-asc:after {
        content: fa-sort-asc-content;
    }

    .sortable.sorted-desc:after {
        content: fa-sort-desc-content;
    }

    .current-users-move {
        themed background-color miniboard-to-move
    }

    .viewed-users-move {
        themed background-color miniboard-viewed-to-move
    }

    .goban-with-names {
        display: inline-flex;
        width: 12rem;
        flex: 0;
        flex-direciton: row;
        align-items: center;
        justify-content: right;
        .names {
            text-align: right;
            flex: 1;
            overflow: hidden;
        }
    }
}
