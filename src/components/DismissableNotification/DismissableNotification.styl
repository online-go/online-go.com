.DismissableNotification {
    themed-desaturate-and-lighten-darken background-color info 80% 70%
    themed-darken border-color info 00%
    border: 1px solid #000;
    text-align: center;
    margin: 0.5rem;
    padding: 0.5rem;
    border-radius: 0.5rem;

    .fa-times {
        themed color shade2;
        float: right;
        cursor: pointer;

        &:hover {
            themed color shade1;
        }

    }
}
