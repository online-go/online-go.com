.Player {
    themed color user
    cursor: pointer;
    white-space: nowrap;
    
    //themed color primary
    &:hover {
        text-decoration: underline;
    }

    &.nolink {
        cursor: auto;
        &:hover {
            text-decoration: none;
        }
    }

    .flag {
        margin-right: 0.3rem;
        margin-left: 0.1rem;
    }



    &.with-flare:before {
        display: inline-block;
        width: 0.8rem;
        font-family: 'FontAwesome';
        font-size: 0.7rem;
        content: " ";
        //text-shadow: 0 0 1px rgba(0,0,0,0.5);
    }
    &.with-flare.supporter:before {
        themed color supporter
        content: fa-circle-content;
    }
    &.with-flare.moderator:before {
        themed color moderator
        content: fa-gavel-content;
    }
    &.with-flare.admin:before {
        themed color admin
        content: fa-wrench-content;
    }


    
    &.timeout{
        //color: @ogs-player-timeout  !important;
    }
    &.supporter{
        themed color supporter
    }
    &.ambassador{
        themed color ambassador
    }
    &.teacher{
        themed color teacher
    }
    &.bot{
        themed color bot
    }
    &.moderator{
        themed color moderator
    }
    &.admin{
        themed color admin
    }
    &.guest {
        color: #888;
        cursor: default;
        text-decoration: none;
    }



    &.show-online:before {
        display: inline-block;
        font-size: 0.5rem;
        width: 0.5rem;
        font-family: 'FontAwesome';
        content: fa-circle-content;
        color: #888;
        text-shadow: 0 0 1px rgba(0,0,0,0.5);
        vertical-align: middle;
        padding-bottom: 0.5rem;
    }
    &.show-online.online:before {
        color: #33FF33;
    }



    & .rank {
        font-size: 0.7em;
        padding-left: 0.15em;
        padding-top: 0.2em;
    }
}

.Player-with-icon {
    display: inline-flex;
    align-items: center; /* needed for Game info modal */

    .PlayerIcon {
        margin-right: 0.5em;
    }
}

.player-name-container span.Player{
    color: inherit;
}