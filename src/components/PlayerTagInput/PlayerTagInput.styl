.PlayerTagInput {
    margin-top: 0.5rem;
    padding-top: 0.5rem;
    themed(border-top-color, shade3);
    border-top: 1px solid;

    .loading {
        text-align: center;
        padding: 0.5rem;
        themed(color, shade2);
    }

    .tags-header {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        margin-bottom: 0.25rem;

        .tag-label {
            font-size: 0.85em;
            font-weight: bold;
            themed(color, shade1);
        }
    }

    .tag-dropdown-container {
        position: relative;

        .add-tag-button {
            width: 1.25rem;
            height: 1.25rem;
            border-radius: 50%;
            themed(background, success);
            themed(color, colored-background-fg);
            border: none;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 0.65rem;

            &:hover {
                themed-darken(background, success, 10%);
            }
        }

        .tag-dropdown {
            position: absolute;
            top: calc(100% + 0.25rem);
            left: 0;
            themed(background, bg);
            themed(border-color, shade3);
            border: 1px solid;
            border-radius: 4px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            min-width: 150px;
            max-width: 200px;
            z-index: 1000;

            .tag-list {
                max-height: 150px;
                overflow-y: auto;

                .tag-option {
                    padding: 0.375rem 0.75rem;
                    cursor: pointer;
                    font-size: 0.85em;

                    &:hover {
                        themed(background, shade5);
                    }
                }

                .no-tags-available {
                    padding: 0.375rem 0.75rem;
                    themed(color, shade2);
                    font-style: italic;
                    font-size: 0.85em;
                }
            }

            .new-tag-input {
                themed(border-top-color, shade3);
                border-top: 1px solid;
                padding: 0.375rem;

                input {
                    width: 100%;
                    padding: 0.375rem;
                    themed(border-color, shade3);
                    themed(background, input-bg);
                    themed(color, input-fg);
                    border: 1px solid;
                    border-radius: 4px;
                    font-size: 0.8em;

                    &::placeholder {
                        themed(color, shade2);
                    }
                }
            }
        }
    }

    .tags-container {
        display: flex;
        flex-wrap: wrap;
        gap: 0.25rem;
        align-items: center;

        .no-tags-message {
            themed(color, shade2);
            font-style: italic;
            font-size: 0.85em;
        }

        .tag {
            display: inline-flex;
            align-items: center;
            gap: 0.25rem;
            padding: 0.125rem 0.5rem;
            themed(background, shade4);
            themed(border-color, shade3);
            border: 1px solid;
            border-radius: 3px;
            font-size: 0.85em;

            .remove-tag {
                background: none;
                border: none;
                padding: 0;
                margin: 0;
                cursor: pointer;
                themed(color, shade1);
                display: flex;
                align-items: center;
                justify-content: center;

                &:hover {
                    themed(color, fg);
                }

                i {
                    font-size: 0.75em;
                }
            }
        }
    }
}
