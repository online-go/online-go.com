.joseki-variation-filter {
    display: flex;
    flex-direction: column;

    padding: 3px;

    .filter-set {
        margin-bottom: 0.5em;
        select, .joseki-tag-selector {
            margin-left: 0.5em;
        }

        .filter-set-inactive {
            background-color: grey;
        }
    }

    .filter-label {
        margin-right: 0.5em;
    }

    .filter-notes {
        text-align: center;
        font-style: italic;
    }
}
