/** Ribbon / Ribboned **/
.Ribboned {
    position: relative;
}

.Ribbon-container {
    overflow: hidden;
    display: block;
    position: absolute;
    top: -0.1rem;
    right: -0.1rem;
    width: 6rem;
    height: 6rem;

    .Ribbon {
        position: relative;
        font-weight: bold;
        padding: 0.4rem;
        top: 1.0rem;
        left: -1.0rem;
        width: 10.0rem;
        text-align: center;
        transform: rotate(45deg);
        box-shadow: 0 2px 2px 0 rgba(0, 0, 0, 0.15);
        background-color: rgba(255, 255, 255, 0.3);

        &.primary {
            themed-lighten(background-color, primary, 40%);
            themed(color, colored-background-fg);
        }
        &.reject {
            themed-lighten(background-color, reject, 40%);
            themed(color, colored-background-fg);
        }
        &.success {
            themed-lighten(background-color, primary, 40%);
            themed(color, colored-background-fg);
        }
    }
}
