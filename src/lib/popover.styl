.popover-backdrop {
    position: fixed;
    display: flex;
    //min-height: 100%;
    //height: 100%;
    max-height: 100vh;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: z.popover;

    align-items: flex-start;
    align-content: stretch;
    justify-content: center;
}

.popover-container {
    position: absolute;
    display: inline-block;
    z-index: z.popover;
}
