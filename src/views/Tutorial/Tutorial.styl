.Tutorial {
    // here
    display: flex;
    justify-content: center;

    .TutorialPage {
        text-align: center;

        .tutorial-text {
            font-size: font-size-big;
            width: 50rem;
            min-height: 12rem;
            max-width: 100vw;
            text-align: justify;
            margin-top: 1.5rem;
            margin-bottom: 1.5rem;
        }

        .buttons {
            text-align: right;
        }
    }

    .Done {
        width: 50rem;
        max-width: 100vw;
        text-align: justify;

        .col-sm-6 {
