        }
        .fa-trophy:hover, .fa-lock:hover {
            themed color fg
        }

        .controls {
            flex-shrink: 1;
            flex-grow: 1;
            flex-basis: 30rem;
            display: flex;

            .move-control {
                flex-shrink: 0;
                flex-grow: 1;
                cursor: pointer;
                text-align: center;
            }
            .move-control:hover, .move-number:hover, .icons:hover {
