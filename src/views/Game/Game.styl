        position: fixed;
        top: 0.5rem;
        right: 0.5rem;
        font-size: 2rem;
        themed color shade3
        z-index: z.goban.exit-zenmode;
        cursor: pointer;
    }
    .leave-zen-mode-button:hover {
        themed color fg
    }

    .center-col {
        flex-grow: 1;
        flex-shrink: 1;
        flex-basis: 50%;
        display: flex;
        flex-direction: column;
        align-items: stretch;
        width: 100%;

        // Why? ...
        .goban-container {
        }

    }
    &.portrait .center-col {
        .cancel-button {
            align-self: center;
            flex-shrink: 0;
            position: relative;
            top: 25px;
        }
    }



    .left-col, .right-col {
