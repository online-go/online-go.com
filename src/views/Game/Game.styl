            }

        }
    }

    &.portrait .action-bar {
        .icons {
            //padding-left: 1.0rem;
        }
        .move-number {
        }
    }


    .tab-icon {
        position: fixed;
        right: 0;
        bottom: 0;
        font-size: 1.2rem;
        cursor: pointer;
        themed color shade2
        z-index: z.goban.tab-icon;
        padding: 0.5rem;
    }
    .tab-icon:hover {
        themed color fg
    }


    .leave-zen-mode-button {
