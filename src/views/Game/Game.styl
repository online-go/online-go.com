        }
		.right-col {
			.chat-container,
			.game-analyze-button-bar,
			#move-tree-container {
				display: none;
			}
			.play-controls {
				flex-grow: 0;
                .accept-undo-button {
                    display: none
                }
			}
			justify-content: center;
			width: auto;
			flex-grow: 0;
            .players {
                flex-direction: column;
                .player-container {
                    width: 100%;
                }
            }
            min-width 170px;
		}
		.center-col {
			.goban-container {
				flex-grow: 0;
			}
            flex-basis: 100vh
			justify-content: flex-start;
			flex-grow: 0;
		}
        &.portrait {
            .center-col {
                flex-basis: 100%
            }}
