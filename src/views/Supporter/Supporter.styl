.Supporter {
    // here
    display: flex;
    flex-direction: column;
    align-items: center;
    max-width: 100vw;
    padding: 1rem;

    .main-paragraph {
        max-width: 1110px;
        text-align: justify;

        .p {
            margin-top: 1rem;
        }

        .perk {
            padding: 1rem 1rem 0 1rem;
            display: flex;
            align-items: top;
            .fa-circle {
                font-size: 0.5rem;
                padding: 0.4rem;
            }
        }
    }

    .support-thanks {
        margin-top: 1rem;
        text-align: center;
    }

    input[type="range"] {
        border: none;
    }

    .details {
        text-align: center;
    }


    .paypal-button {
        cursor: pointer;
    }

    .cc-form {
        display: inline-block;
        max-width: 20rem;
        input{
            font-family: 'Source Code Pro', monospace;
            border: 1px solid transparent;
            themed border-color shade3
            border-radius: 0.3rem;
            padding: 0.3rem;
            themed background-color shade4
        }
        .primary {
            margin-top: 1rem;
        }
    }

    .cc-number, .exp-cvc, .name, .email {
        display: flex;
    }
    .cc-number {
        input {
            width: 100%;
        }
    }
    .exp-cvc{
        display: flex;
        justify-content: space-between;

        input.cc-exp {
            text-align: center;
            width: 6rem;
        }
        input.cc-cvc {
            text-align: center;
            width: 4rem;
        }
    }
    .name{
        display: flex;
        justify-content: space-between;
        input.fname {

            width: 40%;
        }
        input.lname {
            width: 55%;
        }
    }
    .email{
        input {
            width: 100%;
        }
    }

    .LineText {
        margin: 1rem;
    }
}

