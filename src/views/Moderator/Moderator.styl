.Moderator {
    // here

    td.timestamp {
        @extend .monospace
        white-space: nowrap;
        font-size: font-size-smaller;
        width: 7rem;
        padding-top: 0.4rem;
    }

    .userlog-user {
        display: flex;
        flex-wrap: wrap;

        > div,span {
            display: inline-block;
            margin-left: 0.5rem;
            margin-right: 0.5rem;
            white-space: nowrap;
        }
    }

    .small {
        font-size: font-size-smaller;
    }

    .clip {
        overflow: hidden;
    }

    .quick-ban {
        white-space: nowrap;
    }

    .userlog {
        th,td {
            text-align: left;
        }
    }

    .hsearch {
        display: flex;
        justify-content: space-between;
        flex-wrap: wrap;
        align-items: center;
    }

    .should-ban {
        color: red;
    }

}
