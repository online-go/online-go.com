.About {
    display: flex;
    flex-direction: column;
    align-items: center;

    .main-about {
        max-width: 30rem;
        text-align: justify;

        .title-version {
            position: relative;

            .links {
                position: absolute;
                right: 0;
                bottom: 0;
                font-size: font-size-small;

                a {
                    padding-left: 1rem;
                }
            }
        }

    }

    .about-links {
        display: flex;
        justify-content: space-between;
    }

    .version {
        padding-top: 2rem;
    }

    .github-link {
        position: absolute;
        top: navbar-height;
        right: 0; 
        border: 0;
    }
}

