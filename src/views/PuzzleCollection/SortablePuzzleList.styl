.SortablePuzzleList {
    width: 35rem;
    padding: 0;
    max-width: 100vw;
}

// this has to be outside, the drag/drop stuff creates a wandering <li> node
.SortablePuzzleListEntry {
    list-style: none;
    user-select: none;
    cursor: grab;
    border: 1px solid transparent;
    themed border-color shade4
    display: inline-flex;
    align-items: center;
    padding: 0.5rem;

    &:hover {
        themed border-color shade4
    }

    .minigoban, .name, .difficulty {
        display: inline-block;
        .MiniGoban {
            width: 64px;
            height: 64px;
        }
    }
    .minigoban {
        width: 5rem;
    }
    .name {
        width: 19rem;
        overflow: hidden;
    }
    .difficulty {
        width: 5rem;
        overflow: hidden;
    }
}
